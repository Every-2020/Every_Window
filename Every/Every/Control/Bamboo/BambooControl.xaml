<UserControl x:Class="Every.Control.Bamboo.BambooControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Every.Control"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    
    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="2*"/>
                
                
            </Grid.ColumnDefinitions>
        </Grid>

        <Grid Grid.Row="1">
            <!--<TextBlock Text="대나무숲이 공개될 예정입니다." 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="100"
                       FontFamily="나눔고딕_ac"/>-->
        </Grid>

        <Grid Grid.Row="1">
            <ListView Height="721" Width="900"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ScrollViewer.VerticalScrollBarVisibility="Hidden"
                      ItemsSource="{Binding PostsItems}">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Border Height="721" 
                                    Width="835"
                                    BorderBrush="Black"
                                    BorderThickness="2"
                                    Margin="20">
                                <StackPanel Margin="10">
                                    <TextBlock Text="{Binding Idx, StringFormat={}#{0}번째 이야기}"
                                               FontSize="28"
                                               FontWeight="ExtraBold"
                                               FontFamily="나눔스퀘어_ac"/>
                                    <TextBlock Text="{Binding Created_At, StringFormat=yyyy년 MM월 dd일}"
                                               FontSize="21"
                                               FontWeight="Regular"
                                               Margin="0,0,0,20"
                                               FontFamily="나눔스퀘어_ac"/>
                                    <TextBlock Text="{Binding Content}"
                                               FontSize="28"
                                               FontWeight="Regular"
                                               TextWrapping="Wrap"
                                               FontFamily="나눔스퀘어_ac"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</UserControl>
